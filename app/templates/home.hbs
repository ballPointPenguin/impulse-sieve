{{!-- HEADER --}}
<div>
  {{#each this.headerBlocks as |block|}}
    <RadBlock @record={{block}} />
  {{/each}}
</div>

{{!-- TITLE --}}
<div>
  {{#each this.titleBlocks as |block|}}
    <RadBlock @record={{block}} />
  {{/each}}
</div>

{{!-- BODY --}}
<figure>
  <img alt="{{this.mainPicture.alt}}" src="{{this.host}}{{this.mainPicture.src}}">
  <figcaption>{{this.mainPicture.caption}}</figcaption>
</figure>

{{!-- FOOTER --}}
<div>
  {{#each this.footerBlocks as |block|}}
    <RadBlock @record={{block}} />
  {{/each}}
</div>